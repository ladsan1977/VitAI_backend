# OpenAI Configuration
OPEN_AI_KEY=your_openai_api_key
# Model: Using GPT-5.1 Chat Latest (Responses API)
# Note: GPT-5.1 does not support custom temperature parameter
# Override defaults in config.py if needed:
# OPENAI_MODEL=gpt-5.1-chat-latest
# OPENAI_MAX_OUTPUT_TOKENS=4000

# API Security
# Generate a secure API key for your application
# Format: vitai_sk_prod_<random_string>
# You can generate one using: python -c "import secrets; print(f'vitai_sk_prod_{secrets.token_urlsafe(32)}')"
API_KEY=vitai_sk_prod_your_secret_key_here

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_PER_HOUR=100

# CORS Configuration (for production)
# Format: JSON array or comma-separated list
# Example: CORS_ORIGINS=["https://your-frontend.com","https://www.your-frontend.com"]
# Example: CORS_ORIGINS=https://your-frontend.com,https://www.your-frontend.com
# CORS_ORIGINS=["http://localhost:5173"]

# Production Security Settings
# HTTPS_ONLY=true  # Enforce HTTPS in production
# ALLOWED_HOSTS=["*.onrender.com","localhost"]  # Allowed hostnames

# PostgreSQL Configuration (for Docker Compose)
POSTGRES_DB=vitai
POSTGRES_USER=your_db_username
POSTGRES_PASSWORD=your_secure_password

# Database Configuration (for Application)
DATABASE_URL=postgresql://your_db_username:your_secure_password@localhost:5432/vitai
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Analytics Configuration
ANALYTICS_ENABLED=true

# Prompt Configuration
# Language for the AI prompt loaded from the database (default: en)
PROMPT_LANGUAGE=en

# Environment Settings
APP_ENV=development
LOG_LEVEL=INFO

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true
REDIS_CACHE_TTL=86400  # 24 hours
